script/source = "extends MeshInstance

onready var mat = get_surface_material(0)

enum emit_anims {none,idle,shoot}
var emit_anim :int = emit_anims.idle
var emission := 0.9

func _ready():
	pass

func set_emit_anim(in_anim:int):
	match in_anim:
		emit_anims.none:
			set_process(false)
		emit_anims.idle:
			set_process(true)
		emit_anims.shoot:
			emission = 2.0
			mat.set_shader_param(\"emission\",emission)
			set_process(true)

func _process(delta):
	if emit_anim == emit_anims.idle:
		emission = 0.9+sin(game.time*4)*0.2
		mat.set_shader_param(\"emission\",emission)
		return
	emission = max(emission-delta*2,0)
	mat.set_shader_param(\"emission\",emission)
	if !emission:
		set_emit_anim(emit_anims.none)
"

